@model PPKProjekt.Pages.HTMLReportGenerate.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "";
}

<h2>Details</h2>

<div>
    <h4>TblVozilo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TblVozilo.Tip)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TblVozilo.Tip)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TblVozilo.Marka)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TblVozilo.Marka)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TotalKM)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalKM)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AverageSpeed)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AverageSpeed)
        </dd>
        <h3>SERVISI : </h3>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Servisi[0].Naziv)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Servisi[0].Opis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Servisi[0].ServisStavka.Naziv)
                </th>

            </tr>
        </thead>
        <tbody>
            @{if (Model != null)
                {
                    foreach (var item in Model.Servisi)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Naziv)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Opis)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ServisStavka.Naziv)
                            </td>
                        </tr>
                    }
                } }
        </tbody>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
